#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Estrutura para representar uma sala (cômodo)
typedef struct Sala {
    char nome[50];
    struct Sala* esquerda;  // Ponteiro para a sala à esquerda
    struct Sala* direita;   // Ponteiro para a sala à direita
} Sala;

// Função para criar uma nova sala dinamicamente
Sala* criarSala(const char* nome) {
    // Alocando memória para a sala
    Sala* novaSala = (Sala*)malloc(sizeof(Sala));
    if (novaSala == NULL) {
        printf("Erro na alocação de memória.\n");
        exit(1);
    }
    // Inicializando os valores da nova sala
    strcpy(novaSala->nome, nome);
    novaSala->esquerda = NULL;
    novaSala->direita = NULL;
    return novaSala;
}

// Função para explorar as salas, de forma interativa
void explorarSalas(Sala* salaAtual) {
    char escolha;
    
    while (salaAtual != NULL) {
        // Exibindo o nome da sala atual
        printf("Você está na sala: %s\n", salaAtual->nome);
        
        // Pergunta ao jogador qual direção ele quer seguir
        printf("Escolha uma direção:\n");
        printf("e - Ir para a esquerda\n");
        printf("d - Ir para a direita\n");
        printf("s - Sair do jogo\n");
        printf("Digite sua escolha: ");
        scanf(" %c", &escolha);

        // Ações baseadas na escolha do jogador
        if (escolha == 'e' || escolha == 'E') {
            if (salaAtual->esquerda != NULL) {
                salaAtual = salaAtual->esquerda;
            } else {
                printf("Não há caminho à esquerda nesta sala.\n");
            }
        } else if (escolha == 'd' || escolha == 'D') {
            if (salaAtual->direita != NULL) {
                salaAtual = salaAtual->direita;
            } else {
                printf("Não há caminho à direita nesta sala.\n");
            }
        } else if (escolha == 's' || escolha == 'S') {
            printf("Saindo do jogo...\n");
            break;
        } else {
            printf("Escolha inválida! Tente novamente.\n");
        }
    }

    if (salaAtual == NULL) {
        printf("Você chegou a um cômodo sem saída.\n");
    }
}

// Função principal para criar o mapa da mansão e iniciar a exploração
int main() {
    // Criando as salas da mansão (árvore binária)
    Sala* hallEntrada = criarSala("Hall de Entrada");
    Sala* salaEstar = criarSala("Sala de Estar");
    Sala* cozinha = criarSala("Cozinha");
    Sala* jardim = criarSala("Jardim");
    Sala* biblioteca = criarSala("Biblioteca");
    
    // Conectando as salas entre si
    hallEntrada->esquerda = salaEstar;
    hallEntrada->direita = cozinha;
    salaEstar->esquerda = jardim;
    salaEstar->direita = biblioteca;

    // Iniciando a exploração a partir do Hall de Entrada
    printf("Bem-vindo à mansão!\n");
    explorarSalas(hallEntrada);

    // Liberação de memória (não necessária para esse código simples, mas boa prática)
    free(hallEntrada);
    free(salaEstar);
    free(cozinha);
    free(jardim);
    free(biblioteca);

    return 0;
}
